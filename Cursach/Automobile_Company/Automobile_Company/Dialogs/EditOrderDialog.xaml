<Window x:Class="Automobile_Company.Dialogs.EditOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automobile_Company"
        xmlns:vm="clr-namespace:Automobile_Company.ViewModels"
        xmlns:converters="clr-namespace:Automobile_Company.Converters"
        xmlns:enums="clr-namespace:Automobile_Company.Model.Enums" d:DataContext="{d:DesignInstance Type=vm:EditOrderViewModel}"
        mc:Ignorable="d"
        Title="Редактирование заказа" 
        Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>

        <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Редактирование заказа" 
                   Style="{StaticResource SectionHeaderStyle}"
                   Grid.Row="0"/>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1">
            <!-- Основная информация -->
            <TabItem Header="Основное">
                <ScrollViewer>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ID заказа -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="ID заказа"/>
                            <TextBlock Text="{Binding Order.Id}" 
                                       Foreground="#666" 
                                       FontWeight="Normal"
                                       Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Дата заказа -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Дата создания заказа"/>
                            <TextBlock Text="{Binding Order.OrderDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                       Foreground="#666" 
                                       FontWeight="Normal"
                                       Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Статус заказа -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Статус заказа*"/>
                            <ComboBox SelectedItem="{Binding Status}">
                                <ComboBox.Items>
                                    <enums:OrderStatus>New</enums:OrderStatus>
                                    <enums:OrderStatus>WaitingPayment</enums:OrderStatus>
                                    <enums:OrderStatus>Paid</enums:OrderStatus>
                                    <enums:OrderStatus>InProgress</enums:OrderStatus>
                                    <enums:OrderStatus>Completed</enums:OrderStatus>
                                    <enums:OrderStatus>Cancelled</enums:OrderStatus>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!-- Способ оплаты -->
                        <StackPanel Grid.Row="3">
                            <TextBlock Text="Способ оплаты"/>
                            <ComboBox SelectedItem="{Binding PaymentMethod}">
                                <ComboBox.Items>
                                    <enums:PaymentMethod>Cash</enums:PaymentMethod>
                                    <enums:PaymentMethod>BankTransfer</enums:PaymentMethod>
                                    <enums:PaymentMethod>Card</enums:PaymentMethod>
                                    <enums:PaymentMethod>Online</enums:PaymentMethod>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!-- Статус оплаты -->
                        <StackPanel Grid.Row="4">
                            <TextBlock Text="Статус оплаты"/>
                            <ComboBox SelectedItem="{Binding PaymentStatus}">
                                <ComboBox.Items>
                                    <enums:PaymentStatus>Pending</enums:PaymentStatus>
                                    <enums:PaymentStatus>Paid</enums:PaymentStatus>
                                    <enums:PaymentStatus>PartiallyPaid</enums:PaymentStatus>
                                    <enums:PaymentStatus>Overdue</enums:PaymentStatus>
                                    <enums:PaymentStatus>Cancelled</enums:PaymentStatus>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!-- Оплаченная сумма -->
                        <StackPanel Grid.Row="5">
                            <TextBlock Text="Оплаченная сумма"/>
                            <TextBox Text="{Binding PaidAmount, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="true">
                                                <Setter Property="BorderBrush" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Примечания -->
                        <StackPanel Grid.Row="6" Margin="0,10,0,0">
                            <TextBlock Text="Примечания"/>
                            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Адреса -->
            <TabItem Header="Адреса">
                <ScrollViewer>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Адрес погрузки -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Адрес погрузки*" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBox Text="{Binding LoadingAddress, UpdateSourceTrigger=PropertyChanged}"
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>

                        <!-- Информация об отправителе -->
                        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                                Margin="0,10,0,20" Padding="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Отправитель" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Text="{Binding Order.Sender.GetClientInfo}" 
                                           Margin="0,5,0,0"
                                           Foreground="#666"
                                           FontWeight="Normal"/>
                            </StackPanel>
                        </Border>

                        <!-- Адрес разгрузки -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Адрес разгрузки*" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBox Text="{Binding UnloadingAddress, UpdateSourceTrigger=PropertyChanged}"
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>

                        <!-- Информация о получателе -->
                        <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                                Margin="0,10,0,0" Padding="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Получатель" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Text="{Binding Order.Receiver.GetClientInfo}" 
                                           Margin="0,5,0,0"
                                           Foreground="#666"
                                           FontWeight="Normal"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Груз -->
            <TabItem Header="Груз">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Добавить груз" 
                                Command="{Binding AddCargoItemCommand}"
                                Padding="8,4"/>
                        <Button Content="Удалить выбранный" 
                                Command="{Binding RemoveCargoItemCommand}"
                                Padding="8,4"/>
                    </StackPanel>
                    
                    <!-- Список грузов -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Items}"
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              SelectedItem="{Binding SelectedCargoItem}"
                              CanUserReorderColumns="False" CanUserSortColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Наименование" 
                                                Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                Width="150"/>
                            <DataGridComboBoxColumn Header="Тип груза" Width="120"
                                                    SelectedItemBinding="{Binding CargoType}">
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource">
                                            <Setter.Value>
                                                <x:Array Type="enums:CargoType">
                                                    <enums:CargoType>General</enums:CargoType>
                                                    <enums:CargoType>Fragile</enums:CargoType>
                                                    <enums:CargoType>Perishable</enums:CargoType>
                                                    <enums:CargoType>Hazardous</enums:CargoType>
                                                    <enums:CargoType>Bulk</enums:CargoType>
                                                    <enums:CargoType>Liquid</enums:CargoType>
                                                    <enums:CargoType>Refrigerated</enums:CargoType>
                                                </x:Array>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource">
                                            <Setter.Value>
                                                <x:Array Type="enums:CargoType">
                                                    <enums:CargoType>General</enums:CargoType>
                                                    <enums:CargoType>Fragile</enums:CargoType>
                                                    <enums:CargoType>Perishable</enums:CargoType>
                                                    <enums:CargoType>Hazardous</enums:CargoType>
                                                    <enums:CargoType>Bulk</enums:CargoType>
                                                    <enums:CargoType>Liquid</enums:CargoType>
                                                    <enums:CargoType>Refrigerated</enums:CargoType>
                                                </x:Array>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>
                            <DataGridTextColumn Header="Кол-во" 
                                                Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Ед. изм." 
                                                Binding="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Вес (кг)" 
                                                Binding="{Binding TotalWeight, UpdateSourceTrigger=PropertyChanged}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Страх. стоимость" 
                                                Binding="{Binding InsuranceValue, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:C}}"
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Итоги -->
                    <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Общий вес: " Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding TotalWeight, StringFormat={}{0:F2} кг}" 
                                       Style="{StaticResource InfoTextStyle}" Margin="5,0,20,0"/>

                            <TextBlock Text="Общая страх. стоимость: " Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding TotalInsuranceValue, StringFormat={}{0:C}}" 
                                       Style="{StaticResource InfoTextStyle}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Стоимость и маршрут -->
            <TabItem Header="Стоимость и маршрут">
                <ScrollViewer>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Стоимость заказа -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Стоимость заказа*"/>
                            <TextBox Text="{Binding OrderCost, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="true">
                                                <Setter Property="BorderBrush" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Длина маршрута -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Длина маршрута (км)*"/>
                            <TextBox Text="{Binding RouteLength, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="true">
                                                <Setter Property="BorderBrush" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Дата прибытия -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Дата прибытия"/>
                            <DatePicker SelectedDate="{Binding PaymentDate, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Время прибытия -->
                        <StackPanel Grid.Row="3">
                            <TextBlock Text="Время прибытия"/>
                            <TextBox Text="{Binding ArrivalTime, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,10">
                                <TextBox.ToolTip>
                                    <TextBlock Text="Формат: HH:mm (например, 14:30)"/>
                                </TextBox.ToolTip>
                            </TextBox>
                        </StackPanel>

                        <!-- Дата прибытия на погрузку (для рейсов) -->
                        <StackPanel Grid.Row="4" Visibility="{Binding HasTrip, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Дата прибытия на погрузку (для рейса)" 
                                       FontWeight="Bold" Foreground="#2196F3"/>
                            <StackPanel Orientation="Horizontal">
                                <DatePicker SelectedDate="{Binding ArrivalToLoadingDate}" 
                                            Width="150" Margin="0,0,10,0"/>
                                <TextBox Text="{Binding ArrivalToLoadingTime}" 
                                         Width="80"
                                         ToolTip="Формат: HH:mm"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="120" Padding="15,8"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Background="#4CAF50">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Отмена" Width="120" Padding="15,8" Margin="10,0,0,0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Background="#F44336">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>