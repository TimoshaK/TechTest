<Window x:Class="Automobile_Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automobile_Company"
        xmlns:vm="clr-namespace:Automobile_Company.ViewModels"
        xmlns:converters="clr-namespace:Automobile_Company.Converters"
        xmlns:enums="clr-namespace:Automobile_Company.Model.Enums"
        mc:Ignorable="d"
        Title="Автомобильная Компания" 
        Height="768" Width="1024"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:VehicleImageConverter x:Key="VehicleImageConverter"/>
        <!-- Конвертер для цвета статуса заказа -->
        <converters:OrderStatusToColorConverter x:Key="StatusColorConverter"/>
        <!-- Конвертер для цвета статуса заказа -->
        <converters:OrderStatusToBackgroundColorConverter x:Key="StatusBackgroundConverter"/>
        <!-- Конвертер для цвета статуса оплаты -->
        <converters:PaymentStatusToColorConverter x:Key="PaymentColorConverter"/>
        <!-- Конвертер для пустой строки в Visibility -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <!-- Конвертер для Null в Boolean -->
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <!-- Конвертер для типа клиента -->
        <converters:ClientTypeConverter x:Key="ClientTypeConverter"/>
        <!-- Стиль для карточек заказов -->
        <Style x:Key="OrderCardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="4" Opacity="0.3" BlurRadius="8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для прогресс-бара в карточке -->
        <Style x:Key="CardProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Шаблон карточки заказа -->
        <DataTemplate x:Key="OrderCardTemplate">
            <Border Style="{StaticResource OrderCardStyle}" Width="280" Height="220"
                    MouseLeftButtonDown="OrderCard_MouseLeftButtonDown">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Редактировать" 
                                  Command="{Binding EditOrderCommand}"
                                  CommandParameter="{Binding}"/>
                        <MenuItem Header="Отменить" 
                                  Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.CancelOrderCommand}"
                                  CommandParameter="{Binding}"/>
                        <Separator/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок с ID и статусом -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Sender.Phone, StringFormat='Заказ.Тел.:{0}'}" 
                                   FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding Status}" 
                                   Margin="10,0,0,0"
                                   Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Дата и стоимость -->
                    <StackPanel Grid.Row="1" Margin="0,5,0,0">
                        
                        <TextBlock Text="{Binding OrderCost, StringFormat='Стоимость: {0:C}'}" 
                                   FontSize="12" Foreground="#666"/>
                    </StackPanel>

                    <!-- Клиенты и адреса -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Sender, Converter={StaticResource ClientTypeConverter},StringFormat='Отправитель: {0}'}" 
                                   FontWeight="Bold" FontSize="12"/>

                        <TextBlock Text="{Binding Sender, Converter={StaticResource ClientTypeConverter},StringFormat='Получатель: {0}'}" 
                                   FontWeight="Bold" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="Маршрут:" FontWeight="Bold" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding LoadingAddress}" 
                                   FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding UnloadingAddress,StringFormat='-> {0}'}" 
                                   FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Прогресс-бар -->
                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Progress, StringFormat='Прогресс: {0}%'}" 
                                   FontSize="11" FontWeight="Bold"/>
                        <ProgressBar Value="{Binding Progress}" 
                                     Style="{StaticResource CardProgressBarStyle}"
                                     Maximum="100"/>
                    </StackPanel>

                    <!-- Статус оплаты -->
                    <Border Grid.Row="4" CornerRadius="4" Padding="3,1" 
                            HorizontalAlignment="Right" Margin="0,5,0,0"
                            Background="{Binding PaymentStatus, Converter={StaticResource PaymentColorConverter}}">
                        <TextBlock Text="{Binding PaymentStatus}" 
                                   FontSize="10" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон карточки рейса -->
        <DataTemplate x:Key="TripCardTemplate">
            <Border Style="{StaticResource OrderCardStyle}" Width="300" Height="210"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Vehicle.FullName, StringFormat=Рейс {0}}" 
                                   FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding Status}" 
                                   Margin="10,0,0,0"
                                   Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" 
                               Text="Экипаж:" 
                               FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="2" 
                            Text="{Binding Crews[0].FullName}" 
                                FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="3" 
                            Text="{Binding Crews[1].FullName}" 
                            FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="4" 
                            Text="{Binding Crews[2].FullName}" 
                            FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    <!-- Транспорт и водитель -->
                    <TextBlock Grid.Row="5" 
                                Text="{Binding ArrivalToLoadingTime, StringFormat='Дата погрузки: {0:dd.MM.yyyy HH:mm}'}" 
                                FontWeight="Bold" Margin="0,5,0,0"/>
                    <!-- Прогресс-бар -->
                    <StackPanel Grid.Row="6" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Progress, StringFormat='Прогресс: {0}%'}" 
                                   FontSize="11" FontWeight="Bold"/>
                        <ProgressBar Value="{Binding Progress}" 
                                     Style="{StaticResource CardProgressBarStyle}"
                                     Maximum="100"/>
                    </StackPanel>
                    <!-- Кнопка отмены -->
                    <Button Grid.Row="7" Content="Отменить рейс" 
                            HorizontalAlignment="Right" Margin="0,5,0,0"
                            Padding="8,2" FontSize="11"
                            Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.CancelTripCommand}"
                            CommandParameter="{Binding}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF5252"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanCancel}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>
            </Border>
        </DataTemplate>

        <!-- Стиль для заголовков разделов -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <TabControl>
            <!-- Главная вкладка -->
            <TabItem Header="Главная">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Статистика" Style="{StaticResource SectionHeaderStyle}"/>

                        <WrapPanel>
                            <!-- Карточка выполненных заказов -->
                            <Border Width="200" Height="120" Margin="10" Background="#4CAF50" 
                                    CornerRadius="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding CompletedOrdersCount}" 
                                               FontSize="36" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Выполнено заказов" 
                                               FontSize="14" Foreground="White" 
                                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Карточка заказов в процессе -->
                            <Border Width="200" Height="120" Margin="10" Background="#FF9800" 
                                    CornerRadius="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding InProgressOrdersCount}" 
                                               FontSize="36" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Заказов в процессе" 
                                               FontSize="14" Foreground="White" 
                                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Карточка свободных водителей -->
                            <Border Width="200" Height="120" Margin="10" Background="#2196F3" 
                                    CornerRadius="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding AvailableDriversCount}" 
                                               FontSize="36" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Свободных водителей" 
                                               FontSize="14" Foreground="White" 
                                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Карточка свободных автомобилей -->
                            <Border Width="200" Height="120" Margin="10" Background="#9C27B0" 
                                    CornerRadius="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding AvailableVehiclesCount}" 
                                               FontSize="36" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Свободных автомобилей" 
                                               FontSize="14" Foreground="White" 
                                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <!-- Ближайшие рейсы -->
                        <TextBlock Text="Ближайшие рейсы" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                        <ItemsControl ItemsSource="{Binding Trips}" 
                                      ItemTemplate="{StaticResource TripCardTemplate}"
                                      Margin="0,0,0,20">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка заказов -->
            <TabItem Header="Заказы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Создать заказ" 
        Command="{Binding CreateOrderCommand}"
        Background="#4CAF50" Foreground="White"
        Padding="12,6" Margin="5"
        BorderBrush="Transparent" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#2E7D32"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Фильтры -->
                            <ComboBox Margin="10,0,0,0" Width="150" 
                                      SelectedValue="{Binding SelectedOrderStatusFilter}">
                                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                                <ComboBoxItem Content="Новые"/>
                                <ComboBoxItem Content="Ожидают оплаты"/>
                                <ComboBoxItem Content="Оплаченные"/>
                                <ComboBoxItem Content="В процессе"/>
                                <ComboBoxItem Content="Выполненные"/>
                                <ComboBoxItem Content="Отмененные"/>
                            </ComboBox>

                            <!-- Поиск -->
                            <TextBox Width="200" Margin="10,0,0,0" 
                                     Text="{Binding OrderSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="5">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                                CornerRadius="4">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                        <TextBlock Text="Поиск заказов..." 
                                                                   Margin="5,0,0,0" VerticalAlignment="Center" 
                                                                   Foreground="Gray" IsHitTestVisible="False"
                                                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Список заказов в виде карточек -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding Orders}" 
                                      ItemTemplate="{StaticResource OrderCardTemplate}"
                                      Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Вкладка рейсов -->
            <TabItem Header="Рейсы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Создать рейс" Margin="5" Padding="12,6" 
                                    Command="{Binding CreateTripCommand}"
                                    Background="#2196F3" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- Фильтры -->
                            <ComboBox Margin="10,0,0,0" Width="150" 
                                      SelectedValue="{Binding SelectedTripStatusFilter}">
                                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                                <ComboBoxItem Content="Созданные"/>
                                <ComboBoxItem Content="Погрузка"/>
                                <ComboBoxItem Content="В пути"/>
                                <ComboBoxItem Content="Разгрузка"/>
                                <ComboBoxItem Content="Завершенные"/>
                                <ComboBoxItem Content="Отмененные"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Список рейсов в виде карточек -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding Trips}" 
                                      ItemTemplate="{StaticResource TripCardTemplate}"
                                      Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Вкладка водителей -->
            <TabItem Header="Водители">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Добавить" Margin="5" Padding="12,6" 
                                    Command="{Binding AddDriverCommand}"
                                    Background="#2196F3" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Список водителей (оставляем таблицу для удобства) -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Drivers}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              SelectedItem="{Binding SelectedDriver}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                            <DataGridTextColumn Header="Табельный №" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="80"/>
                            <DataGridTextColumn Header="Стаж" Binding="{Binding ExperienceYears}" Width="80"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="Класс" Binding="{Binding SkillClass}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Транспорт" Binding="{Binding AssignedVehicle.FullName}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка автомобилей -->
            <TabItem Header="Автомобили">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Добавить" Margin="5" Padding="12,6" 
                        Command="{Binding AddVehicleCommand}"
                        Background="#2196F3" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Удалить" Margin="5" Padding="12,6" 
                                    Command="{Binding DeleteVehicleCommand}"
                                    Background="Red" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFA72B05"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Список автомобилей с изображениями -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Vehicles}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  SelectedItem="{Binding SelectedVehicle}"
                  RowHeight="70"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">

                        <!-- Ресурсы для DataGrid -->
                        <DataGrid.Resources>
                            <!-- Конвертер для проверки наличия изображения -->
                            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
                            <!-- Стиль для центрирования содержимого ячеек -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>

                            <!-- Стиль для центрирования заголовков -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Фото" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Border Width="60" Height="60" 
                                        CornerRadius="4" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1"
                                        Background="White">
                                                <Image Source="{Binding PhotoPath, Converter={StaticResource VehicleImageConverter}}"
                                           Stretch="UniformToFill"
                                           Width="58" Height="58"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Гос. номер -->
                            <DataGridTextColumn Header="Гос. номер" 
                        Binding="{Binding LicensePlate}" 
                        Width="100"/>

                            <!-- Марка -->
                            <DataGridTextColumn Header="Марка" 
                        Binding="{Binding Brand}" 
                        Width="90"/>

                            <!-- Модель -->
                            <DataGridTextColumn Header="Модель" 
                        Binding="{Binding Model}" 
                        Width="90"/>

                            <!-- Грузоподъемность -->
                            <DataGridTextColumn Header="Грузоподъемность" 
                        Binding="{Binding LoadCapacity, StringFormat={}{0} т}" 
                        Width="120"/>

                            <!-- Тип кузова -->
                            <DataGridTextColumn Header="Тип кузова" 
                        Binding="{Binding BodyType}" 
                        Width="100"/>

                            <!-- Год выпуска -->
                            <DataGridTextColumn Header="Год выпуска" 
                        Binding="{Binding YearOfManufacture}" 
                        Width="90"/>

                            <!-- Статус -->
                            <DataGridTextColumn Header="Статус" 
                        Binding="{Binding Status}" 
                        Width="90"/>

                            <!-- Статус -->
                            <DataGridTextColumn Header="Водитель" 
                        Binding="{Binding FullName}" 
                        Width="90"/>            
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!-- Вкладка клиентов -->
            <TabItem Header="Клиенты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Удалить" Margin="5" Padding="12,6" 
                                    Command="{Binding DeleteClientCommand}"
                                    CommandParameter="{Binding SelectedClient}"
                                    Background="#FF5252" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="IsEnabled" Value="{Binding SelectedClient, Converter={StaticResource NullToBooleanConverter}}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D32F2F"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Список клиентов (оставляем таблицу для удобства) -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Clients}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              SelectedItem="{Binding SelectedClient}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Тип" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}">
                                                    <Binding Path="." Converter="{StaticResource ClientTypeConverter}"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                            <DataGridTextColumn Header="Информация" Width="300">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding GetClient}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>